{
    "compilerOptions": {
        "target": "es6",
        "lib": ["es6"],
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "alwaysStrict": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "outDir": "compiled",
        "rootDir": "src/",
        "types": ["lua-types/5.3"]
    },
    "include": ["src/**/*"],
    "tstl": {
        "luaTarget": "5.3",
        "noHeader": true,
        "luaLibImport": "require",
        "noImplicitSelf": true
        // "luaBundle": "compiled/bundle.lua",
        // "luaBundleEntry": "src/entry.ts"
    }
}
